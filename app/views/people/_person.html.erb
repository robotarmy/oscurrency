<li class="vcard person">
  <div class="profile-image">
    <%= image_link person, :class => "photo", :image => :thumbnail %>
  </div>
  <div class="col_content">
    <p><%= person_link person, :class => "url fn" %></p>
    <% if defined? short %>
    <%= display person.listed_categories, :class => "meta" %>
    <%= display simple_format_without_paragraph(person.short_description), :class => "note" %><br/>    
    <% else %>
    <%= display simple_format_without_paragraph(person.description), :class => "note" %>
    <% end %>
  </div>
</li>
