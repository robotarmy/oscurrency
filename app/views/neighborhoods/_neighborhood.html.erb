<tr class="neighborhoods" >
  <td>
    <div class=categoryMenuItem"><%= h(neighborhood.name) %></div>
				</td>

<td class="categorynumbercell">
  <% if neighborhood.reqs.current_and_active.length  > 0 -%>
  <a class="categoryMenuItem" href="/neighborhoods/<%= neighborhood.id %>/reqs">
    <%= neighborhood.reqs.current_and_active.length %>
  </a>
  <% end -%>
</td>
</tr>
<% unless neighborhood.children.empty? -%>
<%= render :partial => 'subneighborhood', :collection => neighborhood.children %>
<% end -%>
