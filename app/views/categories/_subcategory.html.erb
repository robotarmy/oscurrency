<tr class="subcategories">
  <td class="subcategoryname" >
    <div class=categoryMenuItem"><%= h(subcategory.name) %></div>
  </td>

  <td  class="categorynumbercell">
    <% if subcategory.current_and_active_reqs.length  > 0 -%>
    <a href="/categories/<%= subcategory.id %>/reqs">
<%= subcategory.current_and_active_reqs.length %>
</a>
    <% end -%>
  </td>
  <td class="categorynumbercell">
    <% if subcategory.offers.current.length  > 0 -%>
    <a href="/categories/<%= subcategory.id %>/offers">
    <%= subcategory.offers.current.length %>
  </a>
    <% end -%>
  </td>
  <td class="categorynumbercell">
    <% if subcategory.active_people.length  > 0 -%>
    <a href="/categories/<%= subcategory.id %>/people">
    <%= subcategory.active_people.length %>
  </a>
    <% end -%>
  </td>
</tr>
<% if !subcategory.children.empty? %>
<%= render :partial => 'subcategory', :collection => subcategory.children %>
<% end %>

